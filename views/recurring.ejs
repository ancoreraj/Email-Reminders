<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-2" style="font-size: 50px;">Reminders</h1>
      
      <h3 class="text-center mb-3">
        <i class="fas fa-user-plus"></i> Recurring Reminder
      </h3>
      <% include ./partials/messages %>
      <form action="/reminder/schedule" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            autocomplete="off"
            required
          />
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea
            type="text"
            id="description"
            name="description"
            class="form-control"
            placeholder="Enter Description"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <div class="d-flex ml-3">
            <div class="d-flex mt-1">
              <input class="mt-1" type="checkbox" id="monthly" name="monthly">
              <label class="ml-2" for="monthly">Monthly</label>

            </div>
            <div class="input-group mb-3 ml-3">
              <label class="input-group-text" for="inputGroupSelect01">Every</label>
              <select name="monthName" class="p-1" id="inputGroupSelect01">
                <option selected>January</option>
                <option value="1">February</option>
                <option value="2">March</option>
                <option value="3">April</option>
                <option value="4">May</option>
                <option value="5">June</option>
                <option value="6">July</option>
                <option value="7">August</option>
                <option value="8">September</option>
                <option value="9">October</option>
                <option value="10">November</option>
                <option value="11">December</option>
              </select>
            </div>

          </div>
          
        </div>

        <div class="form-group">
          <div class="d-flex ml-3">
            <div class="d-flex mt-1">
              <input class="mt-1" type="checkbox" id="weekly" name="weekly">
              <label class="ml-2" for="weekly">Weekly</label>

            </div>
            <div class="input-group mb-3 ml-3">
              <label class="input-group-text" for="inputGroupSelect01">Every</label>
              <select name="weekDay" class="p-1" id="inputGroupSelect01">
                <option selected>Sunday</option>
                <option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednesday</option>
                <option value="3">Thursday</option>
                <option value="3">Friday</option>
                <option value="3">Saturday</option>
              </select>
            </div>

          </div>
          
        </div>


        <div class="form-group">
          <div class="d-flex ml-3">
            <div class="d-flex mt-1">
              <input class="mt-1" type="checkbox" id="daily" name="daily">
              <label class="ml-2" for="daily">Daily</label>

            </div>
            <label class="input-group-text ml-3" for="scheduleTime">Time</label>
            <input
              class=""
              style="width: 85px;"
              type="time"
              id="scheduleTime"
              name="scheduleTime"
              class="form-control"
              placeholder="Create scheduleTime"
              required
            />

          </div>
          
        </div>

        <button type="submit" class="btn btn-primary btn-block">
          Save
        </button>
      </form>
      <p class="lead mt-4">Back-><a href="/dashboard">Home</a></p>
    </div>
  </div>
</div>
